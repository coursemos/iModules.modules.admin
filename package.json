                "group_id": {
                    "type": "char",
                    "length": 36,
                    "comment": "그룹고유값"
                },
                "assigned_at": {
                    "type": "int",
                    "comment": "할당일시"
                }
            },
            "indexes": {
                "member_id,group_id": "primary_key"
            },
            "comment": "아이모듈 관리자그룹할당 목록"
