    },
    "version": "4.0.0",
    "description": {
        "ko": "아이모듈을 관리하기 위한 통합 관리모듈입니다."
    },
    "author": {
        "name": "Arzz",
        "email": "arzz@arzz.com"
    },
    "homepage": "https://www.imodules.io",
    "versionChecker": "https://api.moimz.com/download/latest",
    "dependencies": {
        "core": "4.0.0"
    },
    "language": "ko",
    "global": true,
    "theme": true,
    "admin": true,
    "configs": {
        "theme": {
            "label": {
                "ko": "관리자테마"
            },
            "type": "theme",
            "default": "/modules/admin/default"
        }
    },
    "databases": {
        "members": {
            "columns": {
                "member_id": {
                    "type": "int",
                    "comment": "회원고유값"
                },
                "language": {
                    "type": "char",
                    "length": 2,
                    "comment": "언어코드"
                },
                "contexts": {
                    "type": "json",
                    "comment": "컨텍스트설정"
                }
            },
            "indexes": {
                "member_id": "primary_key"
            },
            "comment": "아이모듈 관리자 개인화 설정"
        },
        "permissions": {
            "columns": {
                "member_id": {
                    "type": "int",
                    "comment": "회원고유값"
                },
                "component_type": {
                    "type": "varchar",
                    "length": 10,
                    "comment": "컴포넌트종류"
                },
                "component_name": {
                    "type": "varchar",
                    "length": 50,
                    "comment": "컴포넌트명"
                },
                "permission_type": {
                    "type": "varchar",
                    "length": 20,
                    "comment": "권한종류"
                },
                "permissions": {
                    "type": "text",
                    "comment": "권한"
                }
            },
            "indexes": {
                "member_id,component_type,component_name,permission_type": "primary_key",
                "member_id": "index"
            },
            "comment": "아이모듈 관리자 접근권한 관리"
        }
    }
