                "permissions": {
                    "type": "json",
                    "is_null": true,
                    "comment": "권한"
                }
            },
            "indexes": {
                "member_id": "primary_key"
            },
            "comment": "아이모듈 관리자 목록"
        },
        "groups": {
            "columns": {
                "group_id": {
                    "type": "char",
                    "length": 36,
                    "comment": "그룹고유값"
                },
                "title": {
                    "type": "varchar",
                    "length": 50,
                    "comment": "그룹명"
